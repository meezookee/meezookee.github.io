<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="/style.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>閉塞圏</title>
  </head>
  <body>
    <header>
      <h1>
        <a href="{{ page.url }}">閉塞圏</a>
      </h1>
      <nav>
        <a href="/blog">ブログ</a>
        <a href="/diary">日記</a>
      </nav>
    </header>
    <section>
      <header>
        <h2>
          <a href="/blog">Blog</a>
        </h2>
      </header>
      {%- for post in collections.post limit: 5 %}
      <article>
        <header>
          <h3>
            <a href="{{ post.url }}">{{ post.data.title }}</a>
          </h3>
        </header>
        {{ post.content | truncate: 80 }}
        <footer>
          <time datetime="{{ post.date | toISOString }}"
            >{{ post.date | toLocaleString }}</time
          >
        </footer>
      </article>
      {% endfor %}
    </section>
  </body>
</html>
